# Вы можете расположить сценарий своей игры в этом файле.

# Определение персонажей игры.
define e = Character('Дарвин', color="#FF4500")
define f=Character('Гамбол', color="#00008B")
define t=Character('Николь', color="#00BFFF")
define y=Character('Анаис', color="#FFC0CB")
define i=Character('Ричард', color="#FFC0CB")
define k=Character('Пенни', color="#8B4513")
define j=Character('Тина', color="#DEB887")
define u=Character('Патрик', color="#8B4513")
define heart_fon=AlphaDissolve("heart_perehod", delay=3.5, reverse=True)

screen timerr:
    timer 1 repeat True action If(time > 0, SetVariable("time",time - 1), [Hide("timerr"), Jump("end")])
    text str(time)
# Вместо использования оператора image можете просто
# складывать все ваши файлы изображений в папку images.
